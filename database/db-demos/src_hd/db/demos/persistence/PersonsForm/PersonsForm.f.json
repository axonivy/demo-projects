{
  "$schema" : "https://json-schema.axonivy.com/form/13.2.3/form.json",
  "components" : [ {
    "cid" : "text19",
    "type" : "Text",
    "config" : {
      "content" : "PersonsForm Demo uses a LazyDataModel that is implemented using the Person's Entity data repository."
    }
  }, {
    "cid" : "datatable1",
    "type" : "DataTable",
    "config" : {
      "components" : [ {
        "cid" : "datatablecolumn9",
        "type" : "DataTableColumn",
        "config" : {
          "header" : "id",
          "value" : "#{currentRow.id}"
        }
      }, {
        "cid" : "datatablecolumn8",
        "type" : "DataTableColumn",
        "config" : {
          "header" : "First name",
          "value" : "#{currentRow.firstName}"
        }
      }, {
        "cid" : "datatablecolumn10",
        "type" : "DataTableColumn",
        "config" : {
          "header" : "Last name",
          "value" : "#{currentRow.lastName}"
        }
      }, {
        "cid" : "datatablecolumn7",
        "type" : "DataTableColumn",
        "config" : {
          "header" : "Birth date",
          "value" : "#{currentRow.birthDate}"
        }
      }, {
        "cid" : "datatablecolumn3",
        "type" : "DataTableColumn",
        "config" : {
          "header" : "Actions",
          "components" : [ {
            "cid" : "button4",
            "type" : "Button",
            "config" : {
              "action" : "editRow",
              "type" : "EDIT",
              "icon" : "pi pi-pencil"
            }
          }, {
            "cid" : "button5",
            "type" : "Button",
            "config" : {
              "action" : "deleteRow",
              "variant" : "DANGER",
              "type" : "DELETE",
              "icon" : "pi pi-trash",
              "confirmDialog" : true,
              "confirmHeader" : "Delete Confirmation",
              "confirmMessage" : "Are you sure you want to delete row: #{currentRow}?",
              "confirmOkValue" : "Yes",
              "confirmCancelValue" : "No"
            }
          } ],
          "asActionColumn" : true
        }
      } ],
      "value" : "#{data.personsModel}",
      "maxRows" : "10",
      "isEditable" : true,
      "editDialogId" : "dialog2",
      "addButton" : true
    }
  }, {
    "cid" : "dialog2",
    "type" : "Dialog",
    "config" : {
      "components" : [ {
        "cid" : "input17",
        "type" : "Input",
        "config" : {
          "label" : "Id",
          "value" : "#{currentRow.id}",
          "type" : "NUMBER"
        }
      }, {
        "cid" : "input16",
        "type" : "Input",
        "config" : {
          "label" : "First name",
          "value" : "#{currentRow.firstName}"
        }
      }, {
        "cid" : "input18",
        "type" : "Input",
        "config" : {
          "label" : "Last name",
          "value" : "#{currentRow.lastName}"
        }
      }, {
        "cid" : "datepicker15",
        "type" : "DatePicker",
        "config" : {
          "label" : "Birth date",
          "value" : "#{currentRow.birthDate}"
        }
      } ],
      "header" : "Edit Row",
      "linkedComponent" : "datatable1",
      "buttons" : [ {
        "cid" : "button20",
        "type" : "Button",
        "config" : {
          "name" : "Cancel",
          "action" : "cancelEdit",
          "variant" : "SECONDARY",
          "style" : "FLAT",
          "type" : "DIALOGCANCEL"
        }
      }, {
        "cid" : "button21",
        "type" : "Button",
        "config" : {
          "name" : "Save",
          "action" : "saveEdit",
          "type" : "DIALOGSAVE",
          "icon" : "si si-check-1"
        }
      } ]
    }
  } ]
}