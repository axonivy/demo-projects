{
  "name": "Axon Ivy",
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",
  "forwardPorts": [8080],
  "onCreateCommand": "mvn clean package --batch-mode -Dmaven.test.skip=true -Divy.engine.directory=/usr/lib/axonivy-engine",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "installMaven": "true",
      "jdkDistro": "tem"
    },
    "ghcr.io/axonivy/devcontainer-features/engine:1": {
      "downloadUrl": "https://dev.axonivy.com/permalink/dev/axonivy-engine-slim.zip",
      "engineHome": "/usr/lib/axonivy-engine"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "axonivy.vscode-designer-13@prerelease",
        "vscjava.vscode-java-pack"
      ],
      "settings": {
        "engine.directory": "/usr/lib/axonivy-engine"
      }
    }
  }
}
